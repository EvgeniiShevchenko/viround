<%- contentFor('body')  %>
<main class="main">
    <div class="main-wrapper container">
        <section class="main-content">
            <h3 class="main-content-title">Логин</h3>
            <form id="loginForm" class="main-content-form">
                <ul class="content-form-list">
                    <li class="form-list-item">
                        <select class="item-select-phone" name="phone_code">
                            <option class="select-phone-code" value="+380" default>+380</option>
                        </select>
                        <input class="item-fild-number" name="phone_number" type="number"
                            placeholder="введите номер телефона" required>
                    </li>
                    <li class="form-list-item">
                        <input class="item-fild-password" name="password" type="password" placeholder="Пароль" required>
                    </li>
                    <li class="form-item-submit">
                        <button class="item-submit-buttom" type="submit">Логин</button>
                    </li>
                </ul>
            </form>
        </section>
        <nav class="main-autorisation">
            <ul class="main-autorisation-list">
                <li class="autorisation-list-item">
                    <a class="autorisation-item-link" href=""><i class="fas fa-user-secret"></i> Войти как гость</a>
                </li>
                <li class="autorisation-list-item">
                    <p class="autorisation-item-description">Есть аккаунт? <a class="autorisation-description-link"
                            href="">Регистрация</a></p>
                    <div class="autorisation-item-trouble">
                        <button class="trouble-forget-password" type="button">Забыли пароль?</button>
                        <button class="trouble-with-login" type="button">Проблемы со входом?</button>
                    </div>
                </li>
            </ul>
            <div class="main-autorisation-separator"></div>
        </nav>
        <div class="main-autorisation-additional">
            <p class="autorisation-additional-description">или через соцсети</p>
            <ul class="autorisation-additional-list">
                <li class="additional-list-item has-facebook">
                    <a class="additional-item-ref" href="#"><i class="fab fa-facebook-square"></i> Facebook</a>
                </li>
                <li class="additional-list-item has-instagram">
                    <a class="additional-item-ref" href="#"><i class="fab fa-instagram"></i> Instagram</a>
                </li>
                <li class="additional-list-item has-vk">
                    <a class="additional-item-ref" href="#"><i class="fab fa-vk"></i> VK</a>
                </li>
            </ul>
        </div>
    </div>
</main>